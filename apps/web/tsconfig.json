{
  "extends": "@precis/typescript-config/remix.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/web/*": ["./app/*"]
    }
  },
  "exclude": ["node_modules", ".remix", ".vite"]
}
